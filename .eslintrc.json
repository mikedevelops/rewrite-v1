{
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
        "mocha": true
    },
    "ecmafeatures": {
        "jsx": true,
        "modules": true
    },
    "extends": "standard",
    "plugins": [
        "standard",
        "promise",
        "react"
    ],
    "rules": {
        "indent": ["error", 4],
        "no-console": ["error"],
        "react/jsx-uses-vars": 2,
        "react/jsx-uses-react": 2,
        "react/react-in-jsx-scope": 2
    }
}
